#To check NGINX run successfully or no via static hosting:
   Step1: Run this command
    docker run -d \
  --name nginx-web \
  -p 80:80 \
  nginx
Step2: check the image
docker ps




docker run hello-world
docker run nginx
docker run -d nginx: run behind the screen

docker ps: current running image
docker ps -a : it means showing list of running all images
docker stop <container id> : to stop the container
docker rm <contaninerid> : to delete the container
docker rmi <imagename>
docker images : to view list of all images 
docker pull : image pull only.
docker exec <image>  cat /etc/hosts
docker run . : To run the docker file
docker build . 
 docker compose up -d --build : To run the compose file
 docker build -t frontend:v1
 docker run -d -p 5000:5000 --name backend:v1 : to run the backend 





#create a Docker file
FROM ubuntu
RUN apt-get update
RUN apt-get install -y python
RUN apt-get install python-pip
RUN pip install flask
COPY app.py /opt/app.py
ENTRYPOINT FLASK_APP=app.py flask run --host=0.0.0.0


#Docker_frontend
FROM node:18-alpine as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . . 
RUN npm run build

FROM nginx:alpine
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx","-g","daemon off;"]

#Docker_backend
FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

EXPOSE 5000

CMD ["npm", "start"]


